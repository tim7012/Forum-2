<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= f.label :content, "Comment:" %>
  <%= f.text_area :content %>
</div>

<div class="form-group">
  <%= f.label :logo, "LOGO檔案" %>
  <%= f.file_field :logo %>
  <% if @comment.logo.exists? %>
    <%= check_box_tag "destroy_logo", "1" %> 刪除檔案
  <% end %>
</div>
