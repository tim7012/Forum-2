<% if @comment.errors.any? %>
  <ul>
    <% @comment.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
  </ul>
<% end %>

<div>
  <%= f.label :content, "Comment:" %>
  <%= f.text_area :content %>
</div>

<div>
  <%= f.label :draft, "Status:" %>
  <%= f.select :draft, [["draft", "true"],["release", "false"]] %>
</div>